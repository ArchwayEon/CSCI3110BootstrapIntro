
@{
    ViewData["Title"] = "Container Examples";
}

<h1>@ViewData["Title"]</h1>

<div class="container border">
    <h2>Default container</h2>
</div>
<div class="container-sm border example">
    100% wide until small breakpoint
    <button class="col-sm-1 col-md-2 col-lg-2 btn btn-info">1</button>
    <button class="col-sm-1 col-md-2 col-lg-2 btn btn-info">2</button>
    <button class="col-sm-1 col-md-2 col-lg-2 btn btn-info">3</button>
 </div>
<div class="container-md border example">
    <button class="btn btn-info">1</button>
    <button class="btn btn-info">2</button>
    <button class="btn btn-info">3</button>
</div>
<div class="container-lg border">100% wide until large breakpoint</div>
<div class="container-xl border">100% wide until extra large breakpoint</div>
<div class="container-xxl border">100% wide until extra extra large breakpoint</div>

<div class="container-fluid border">
    <h2>Fluid container</h2>
</div>

